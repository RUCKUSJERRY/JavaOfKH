package com.test03;

import java.util.Arrays;
import java.util.StringTokenizer;

public class MTest02 {

	public static void main(String[] args) {
		// [String 사용]
		String colors = "red/yellow#green blue,orange";
		
		String [] temp = colors.split("[/]" + "[#]");
		System.out.println(Arrays.toString(temp));
		System.out.println(colors.substring(0,3));
		System.out.println(colors.substring(4,10));
		System.out.println(colors.substring(11,16));
		System.out.println(colors.substring(17,21));
		System.out.println(colors.substring(22,28));

		// [StringTokenizer 사용]
		StringTokenizer st = new StringTokenizer(colors, "/# ,");

		while (st.hasMoreTokens()) {
			//System.out.println(st.nextToken());
		}

	}
}
